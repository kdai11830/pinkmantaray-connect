<script type="text/javascript">
	$(document).ready(function() {

		for (var i = new Date().getFullYear(); i > 1900; i--) {
			$("#option_year").append($("<option></option>").attr("value",i).text(i.toString()));
		}

		var userData = <%- JSON.stringify(data) %>;

		$('#option_year').val(userData["year"]);

		$('#select_location').val(userData["country"]);

		$('[name="option_gender[]"]').each(function() {
			console.log($(this).val());
			if (userData["gender"].includes($(this).val())) {
				$(this).prop('checked', true);
			}
		});

		$("[name='option_sexuality[]']").each(function() {
			if (userData["sexuality"].includes($(this).val())) {
				$(this).prop('checked', true);
			}
		});

		$("[name='option_race[]']").each(function() {
			if (userData["race_ethnicity"].includes($(this).val())) {
				$(this).prop('checked', true);
			}
		});

		$("[name='option_religion[]']").each(function() {
			if (userData["religion"].includes($(this).val())) {
				$(this).prop('checked', true);
			}
		});

		for (var i = 0; i < userData["interest"].length; i++) {
			if (userData["interest"][i] != null) {
				var li = $('<li>' + userData["interest"][i] + ' <span class="close">[X]</span></li>');
				$("#interests_list").after('<input type="hidden" id="option_interest" name="option_interest[]" value="' + userData["interest"][i] + '">');
				$("#interests_list").append(li);
			}
		}

		for (var i = 0; i < userData["language"].length; i++) {
			if (userData["language"][i] != null) {
				var li = $('<li>' + userData["language"][i] + ' <span class="close">[X]</span></li>');
				$("#language_list").after('<input type="hidden" id="option_language" name="option_language[]" value="' + userData["language"][i] + '">');
				$("#language_list").append(li);
			}
		}
	});
</script>

